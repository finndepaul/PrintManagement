@page "/"
@using PrintManagement.Client.Components.Layout
@layout LoginLayout

<MudGrid Class="d-flex justify-center mt-5">
	<MudItem xs="5" sm="4">
		<MudPaper Class="pa-4">
			<MudForm>
				<h2 class="d-flex justify-center">Login</h2>
				<MudTextField T="string" @bind-Value="username" Label="Username" Required="true" RequiredError="User name is required!" />
				<MudTextField T="string" @bind-Value="password" Label="Password" HelperText="Choose a strong password"
							  InputType="InputType.Password" Required="true"
							  RequiredError="Password is required!" />
				<div class="d-flex align-center justify-space-between">
					<MudLink Href="/forgot-password">Quên mật khẩu?</MudLink>
					<MudButton OnClick="HandleLogin" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Đăng nhập</MudButton>
				</div>
				<div class="d-flex justify-center">
					Hoặc
				</div>
				<div class="d-flex justify-center mt-2">
					<MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="/register">Đăng ký</MudButton>
				</div>
			</MudForm>
		</MudPaper>
	</MudItem>
</MudGrid>
